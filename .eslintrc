{
  "root": true,
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended"
  ],

  "env": {
    "mocha": true,
    "node":  true,
    "es6":   true
  },

  "parserOptions": {
    "ecmaVersion": 2017
  },

  "rules": {
    "semi": [2, "never"],
    'max-len': [2, { code: 160, ignoreUrls: true, ignoreStrings: true, ignoreTemplateLiterals: true }],
    'no-debugger': 0,
    'no-console': 0
    # 'no-debugger': process.env.NODE_ENV === 'production' ? 2 : 0,
    # 'no-console': process.env.NODE_ENV === 'production' ? 2 : 0,
  }
}
